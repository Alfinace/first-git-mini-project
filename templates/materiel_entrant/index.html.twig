{% extends 'base.html.twig' %}

{% block title %}Materiel entrant{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 300px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .step-detail{
        height: 50px;
        font-size: 15px;
        font-weight: bolder;
        border-bottom: 4px solid rgb(31, 146, 111);
        padding-bottom: 7px;
        padding: 10px;
        width: 100%;
        box-shadow: 1px 2px 13px;
    }
    .col-lg-3{
        padding-left: 4px;
    }
</style>
<div class=" text-center">
    <div class="row text-uppercase" style="height: 50px;">
        <div class="col-lg-3">
            <span class="step-detail bg-success text-light">Choix du fournisseur</span>
        </div>
        <div class="col-lg-3">
            <span class="step-detail">Commande <i class="fa fa-arrow-right" aria-hidden="true"></i></span>
        </div>
        <div class="col-lg-3">
            <span class="step-detail">VÃ©rification <i class="fa fa-arrow-right" aria-hidden="true"></i></span>
        </div>
        <div class="col-lg-3">
            <span class="step-detail">Validation <i class="fa fa-arrow-right" aria-hidden="true"></i></span>
        </div> 
    </div>
</div>
<div class="example-wrapper">
    <a href={{ path('fournisseur_new') }} class="btn btn-primary float-right">
        <i class="fa fa-plus-circle" aria-hidden="true"></i>Ajouter un fournisseur
    </a>
    <br>
    <br>
    <h5>Choisissez le Fournisseur concerne</h5>
    <br>
    <form action="{{ path('choice_fournisseur') }}" method="post">
        <div class="form-group">
            <label for=""></label>
            <select  class="custom-select" name="fournisseur" id="" required>
             {% for fournisseur in fournisseurs %}
                 <option value="{{ fournisseur.id }}">{{ fournisseur.nom }}</option>
             {% endfor %}
            </select>
          </div>
          <button type="submit" class="btn btn-primary btn-block btn-outline">Continuer <i class="fa fa-arrow-right" aria-hidden="true"></i></button>
    </form>
   
</div>
{% endblock %}
