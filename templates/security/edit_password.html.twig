{% extends "base.html.twig" %}
{% block title %} {{ parent() }} edit -password {% endblock %}
{% block styles %}
{{ parent() }}
    <style>
        .container{
            width: 400px;
            margin-top:10px;
            background-color: rgba(235, 242, 243, 0.671);
        }
    </style>
{% endblock %}
{% block body %}
    <div>
        <div class="text-center" style="font-size: 100px;">
            <i class="fas fa-user-edit    "></i>
        </div>
        <form method="post" action="{{ path('update_password') }}">
            <div class="form-group">
            <label for="">Ancien mot de passe</label>
            <input type="password" name="oldPassword" id="" class="form-control form-control-sm" placeholder="" >
            {% for message in app.flashes('wrongPassword') %}
                <small class="text-danger">
                    <span class="badge badge-pill text-uppercase badge-danger">erreur</span> {{ message }}
                </small>
            {% endfor %}   
        </div>
          
            <div class="form-group">
            <label for="">Nouveau mot de passe</label>
            <input type="password" name="newPassword" id="" class="form-control form-control-sm" placeholder="" >
            {% for message in app.flashes('unconfirmedPassword') %}
                <small class="text-danger">
                    <span class="badge badge-pill text-uppercase badge-danger">erreur</span> {{ message }}
                </small>
            {% endfor %}     
            </div>

           <div class="form-group">
            <label for="">Confirmation</label>
            <input type="password" name="confirmPassword" id="" class="form-control form-control-sm" placeholder="" >
            </div>
            <div>
                <button type="submit" class="btn btn-primary btn-block btn-sm">Mettre Ã  jour</button>
            </div>
        </form>
    <br>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}  
    <script>
        // active current page 
        $(document).ready(()=>{
            activeCurrentPage('password');
        });
        //end
    </script>
{% endblock %}